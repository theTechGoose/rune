{
  "name": "Rune",
  "scopeName": "source.rune",
  "patterns": [
    { "include": "#tags" },
    { "include": "#dto-reference" },
    { "include": "#boundary" },
    { "include": "#fault" },
    { "include": "#builtin" },
    { "include": "#comment" },
    { "include": "#signature" }
  ],
  "repository": {
    "tags": {
      "match": "\\[(REQ|DTO|TYP|PLY|CSE|CTR|RET)\\]",
      "name": "keyword.control.tag.rune"
    },
    "dto-reference": {
      "match": "\\b[A-Z][a-zA-Z]*Dto\\b",
      "name": "entity.name.type.dto.rune"
    },
    "boundary": {
      "match": "\\b(db|fs|mq|ex|os|lg):",
      "name": "keyword.operator.boundary.rune"
    },
    "fault": {
      "match": "^\\s{6,}[a-z][a-z0-9-]*(?:\\s+[a-z][a-z0-9-]*)*\\s*$",
      "name": "variable.other.fault.rune"
    },
    "builtin": {
      "match": "\\b(Class|string|number|boolean|void|Uint8Array|Primitive)\\b",
      "name": "storage.type.builtin.rune"
    },
    "comment": {
      "match": "//.*$",
      "name": "comment.line.rune"
    },
    "signature": {
      "match": "([a-zA-Z_][a-zA-Z0-9_]*)(\\.|-|::)([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "variable.other.noun.rune" },
        "2": { "name": "punctuation.accessor.rune" },
        "3": { "name": "entity.name.function.verb.rune" }
      }
    }
  }
}
